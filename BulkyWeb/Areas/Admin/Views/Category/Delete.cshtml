@model Category //always we have to start with model


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary  bg-gradient ml-0 py-3">

        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">




        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <!-- padding 3 margin top 4-->
                
              
                <div class="form-floating py-2 col-12">
                    <!--margin bottom 3-->
                    <input asp-for="Name" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"> </label>

                
                </div>
                <div class="form-floating py-2 col-12">
                    <!--margin bottom 3-->
                    <input asp-for="DisplayOrder"  disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"> </label>

                 
                </div>
                <div class="row p-2">
                    <div class="col-6 col-md-3">
                        <!-- boostrap class having 12 cols / into 6-6 cols-->
                        <button type="submit" class="btn btn-danger form-control ">Delete</button>  <!-- add form-control class to give it full width -->

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border">Back to List</a> <!-- btn-outline-secondary  rather thn secondary & add little bit of border too-->

                    </div>
                </div>

            </div>
        </form>

    </div>
</div>



